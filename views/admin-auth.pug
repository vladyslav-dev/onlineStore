html    
    head
        meta(charset='utf8')
        meta(
            name='viewport'
            content='width=device-width, initial-scale=1.0'
        )
        link(
            rel='stylesheet'
            href='../../css/reset.css'
        )
        link(
            rel="shortcut icon"
            href="../../images/favicon.ico"
            type="image/x-icon"
            )
        link(
            rel='stylesheet'
            href='../../css/admin/admin.css'
        )  
        title Admin panel
    body
        div(class="wrapper")
            div(class="logo")
                img(src="../../images/logo-white.png", alt="Vinoro")
            div(class="login-modal")
                div(class="login-content")
                    form(action="/api/admin-page/login" method="post")
                        div(class="inp-block")
                            label Login/phone
                            input(type="text" name="login" autocomplete="off" required)
                        div(class="inp-block")
                            label Password
                            input(type="password" name="password" autocomplete="off" required)        
                        input(type="submit" value="Enter")